@model OSL.Forum.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<div class="d-flex justify-content-center">
    <div class="col-lg-5 col-md-7 col-12 col-sm-9">
        <div class="card border-primary mt-2" style="max-width: 30rem;">
            <div class="card-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                <fieldset>
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control m-0" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                </fieldset>
                }
            </div>
        </div>
    </div>
</div>