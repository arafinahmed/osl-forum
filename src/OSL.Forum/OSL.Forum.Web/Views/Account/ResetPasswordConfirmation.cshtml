@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="d-flex justify-content-center">
    <div class="col-lg-5 col-md-7 col-12 col-sm-9">
        <div class="card border-primary mt-2" style="max-width: 30rem;">
            <div class="card-body">
                <hgroup class="title">
                    <h4>@ViewBag.Title.</h4>
                </hgroup>
                <div>
                    <p>
                        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>